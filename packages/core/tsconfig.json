{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"paths": {
			"src/*": ["./src/*"]
		},
		"baseUrl": "./",
		"outDir": "./dist",
		"target": "ES2015",
		"module": "ES2015",
		"allowJs": false,
		"declaration": true,
		"preserveSymlinks": true,
		"isolatedModules": true,
		"strict": true,
		"moduleResolution": "Bundler",
		"verbatimModuleSyntax": true,
		"emitDeclarationOnly": true,
		"noEmit": false
	},
	"exclude": ["dist"],
	"include": ["src", "__tests__/**/*"]
}
